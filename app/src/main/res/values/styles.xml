<resources>

    <!-- Base application theme. -->
    <style

        name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorNotification</item>
        <item name="colorAccent">@color/bg_sign_in</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/colorToolbar</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="SingInEditText" >
        <item name="android:background" >@color/white</item>
        <item name="android:textColor">@color/bg_sign_in</item>
        <item name="android:textColorHint">@color/sign_in_hint</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/bg_sign_in</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
